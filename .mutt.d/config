# Mutt Configs
# Michael Kelly
# Mon Sep 29 13:59:31 PDT 2008

set folder="~/Maildir"
set mbox="=Read"
set spoolfile="=Inbox"
set mask="!^\\.[^.]"
set postponed="=Postponed"

fcc-hook .* "=Outbox"
set record="=Outbox"
set copy=yes

set ispell="/usr/bin/aspell -c"
set sendmail="/usr/bin/msmtp"
set signature="~/.signature"
set mailcap_path="~/.mutt.d/mailcap"
set alias_file="~/.mutt.d/alias"

#set mbox_type=mbox

mailboxes !
mailboxes =mocha
#mailboxes =svn-commits
#mailboxes	=Newsletters
#mailboxes	=list_gentoo-user
#mailboxes	=list_freebsd-questions
#mailboxes	=list_mutt-users
#mailboxes	=list_gentoo-dev

set from='Michael Kelly <$EMAIL$>'

#alternates "$EMAIL$"

set use_from=yes
set envelope_from=yes

unset help

auto_view text/html

set editor="vim -c 'source ~/.vimrc.text'"

# keep unread messages unread after viewing their mailbox
#unset mark_old

# no subject or "To: " prompts when replying, and no subject prompt when forwarding.
set fast_reply

# default to "yes" when moving emails out of the inbox
set move=ask-yes

# get rid of pause when changing folders, etc
set sleep_time=0

# how to sort messages. this is modified on a folder-by-folder basis in 'hooks'.
#set sort=date-received
set sort=threads

# don't collapse a thread containing unread mail.
unset collapse_unread

# use padding in the pager, vi style
set tilde=yes

# automatically include original posts in replies
set include=yes

# default to postponing aborted messages
set postpone=ask-yes

# change to a less filesystem-like view
#set folder_format="%2C %t %N [%d] %10s     %f"
set folder_format="%2C %t %N  %d   %f"

# change indices around a bit
#set index_format="%4C %Z [%{%Y %b %d %H:%M}] %-20.20F (%4c) %s"
set index_format="%4C %Z %{%Y %b %d %H:%M}  %4c  %-20.20F %s"

set attribution="* %n <%a> [%(%a %Y-%m-%d %H:%M)]:"

# no "press a key..." messages
set wait_key=no

# don't automatically advance
set pager_stop=yes

# my own take on Sven's Draconian Header Weeding
ignore *
unignore from date subject to cc
unignore organization organisation
unignore posted-to reply-to
unignore user-agent
unignore x-mailer
unignore x-newsreader
unignore x-mailing-list
unignore x-operating-system
unignore x-uptime
unignore x-kernel
unignore x-mailer-info
unignore x-gpg-key
unignore x-pgp-key
unignore x-spam-score
unignore x-bogosity
#unignore x-spam-level
#unignore x-spam-status
#unignore x-pgp-key

hdr_order From Date: From: Reply-To: Organization: To: Cc: Subject: User-Agent: X-.*:

# modify what counts as quoting to accomodate those who insist on bizarre quoting rituals...
set quote_regexp="^([ \t]*([|>:}#%]|[a-zA-Z]+>))+"

alternative_order text/plain text/enriched text text/html
