# Main mutt config.
# Michael Kelly
# Sat Sep 14 23:31:52 EDT 2013
# vim: filetype=muttrc

set alias_file="~/.mutt.d/alias.localonly"
set mailcap_path="~/.mutt.d/mailcap"
set sendmail="/usr/bin/msmtp"
set editor="vim -c 'source ~/.vimrc.text'"
set text_flowed=yes
# signature set in hooks.*

set move=no
set help=no
set markers=no
set fast_reply=yes
set sleep_time=0
set sort=threads
set collapse_unread=no
set wait_key=no
set pager_stop=yes
# include set in hooks.*

# Choose plaintext mail formats if they are available; auto-view html if
# necessary
alternative_order text/plain text/enriched text text/html
auto_view text/html

set from='Michael Kelly <m@michaelkelly.org>'
alternates "@michaelkelly.org"

# Choose between maildir and IMAP setups
source ~/.mutt.d/mailbox.maildir
#source ~/.mutt.d/mailbox.imap

# The rest is standard.
source ~/.mutt.d/bind
source ~/.mutt.d/lists.localonly
source ~/.mutt.d/pgp
source ~/.mutt.d/color
source ~/.mutt.d/alias.localonly
source ~/.mutt.d/imap.localonly
source ~/.mutt.d/hooks
