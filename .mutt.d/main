# Main mutt config.
# Michael Kelly
# Wed Aug 17 21:14:42 EDT 2011
# vim: filetype=muttrc

set alias_file="~/.mutt.d/alias.localonly"
set mailcap_path="~/.mutt.d/mailcap"
set folder="imaps://imap.gmail.com:993"
set spoolfile="+INBOX"
set postponed="+[Gmail]/Drafts"
set trash="imaps://imap.gmail.com/[Gmail]/Trash"
set header_cache="~/.mutt-header-cache"
set imap_keepalive=900
set mail_check=30
set timeout=30
set sendmail="/usr/bin/msmtp"
set signature="~/.signature"
set editor="vim -c 'source ~/.vimrc.text'"
set index_format="%4C %Z %[%R %b %d] %-15.15L %2M %s"
set imap_passive=no

set move=no
set help=no
set markers=no
set copy=yes
set use_from=yes
set envelope_from=yes
set fast_reply=yes
set sleep_time=0
set sort=threads
set collapse_unread=no
set include=yes
set postpone=ask-yes
set wait_key=no
set pager_stop=yes
set pipe_decode=yes

# Choose plaintext mail formats if they are available; auto-view html if
# necessary
alternative_order text/plain text/enriched text text/html
auto_view text/html

# Aggressive header weeding
ignore *
unignore from date subject to cc
unignore organization organisation
unignore posted-to reply-to
unignore user-agent
unignore x-mailing-list x-gpg-key x-pgp-key x-spam-score x-bogosity

set from='Michael Kelly <m@michaelkelly.org>'
alternates "@michaelkelly.org"

source ~/.mutt.d/bind
source ~/.mutt.d/lists.localonly
source ~/.mutt.d/pgp
source ~/.mutt.d/color
source ~/.mutt.d/alias.localonly
source ~/.mutt.d/imap.localonly
