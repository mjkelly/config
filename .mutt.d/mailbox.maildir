# Main mutt config.
# Michael Kelly
# Sat Sep 14 23:31:52 EDT 2013
# vim: filetype=muttrc

set mbox_type=Maildir
set folder="~/Maildir"
set spoolfile="+INBOX"
set postponed="+[Gmail].Drafts"
set mbox="+INBOX"
# set record for the '<' shortcut, but don't actually copy messages there --
# Gmail does that.
set record="+[Gmail].Sent Mail"
set copy=no
