startup_message off
#nethack off

# bells are annoying
vbell_msg ""

vbell off

# lots of scrollback
defscrollback 5000

# if something kills the enclosing terminal, automatically detach
autodetach on

# always show the status line
# (yes, the format is nearly indecipherable)
#hardstatus alwayslastline "%{ck}[ %?%-Lw%?%{kc}%n*%f %t%{ck}%?%+Lw%? ] %= %{ck}[ %m/%d %c ]"
# no date+time
hardstatus alwayslastline "%{ck}[%?%-Lw%?%{kc}%n*%f %t%{ck}%?%+Lw%?]"

#termcapinfo xterm hs@

# show terminal name in activity messages
activity "[Activity in %n %t]"

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# this is supposed to help disable changing the titlebar, but it doesn't
#termcapinfo xterm*|rxvt*|kterm*|Eterm* hs@
#termcapinfo xterm*|rxvt*|kterm*|Eterm* ts@
#termcapinfo xterm*|rxvt*|kterm*|Eterm* fs@
#termcapinfo xterm*|rxvt*|kterm*|Eterm* ds@

# default windows. -M means turn on monitoring.
screen 0 /usr/bin/mutt
screen 1 
#select 1
